<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SuperMarioBrosApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SuperMarioBrosApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Style for the RecyclerView -->
    <style name="RecyclerViewStyle" parent="Theme.SuperMarioBrosApp">
        <item name="android:dividerHeight">8dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Style for character names in Detail -->
    <style name="PersonDetailsActivity.Name" parent="Theme.SuperMarioBrosApp">
        <item name="android:textSize">54sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <!-- Style for descriptions in Detail -->
    <style name="PersonDetailsActivity.Description" parent="Theme.SuperMarioBrosApp">
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <!-- Style for Abilities in Detail -->
    <style name="PersonDetailsActivity.Abilities" parent="Theme.SuperMarioBrosApp">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:gravity">left</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <!-- Style for CardView -->
    <style name="CardViewStyle" parent="Theme.SuperMarioBrosApp">
        <item name="cardCornerRadius">50dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Style for CardView text -->
    <style name="CardViewTextStyle" parent="Theme.SuperMarioBrosApp">
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Theme.SuperMarioBrosApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SuperMarioBrosApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>