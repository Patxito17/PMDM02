<resources>
    <!-- Base application theme. -->
    <style name="Theme.SuperMarioBrosApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mario_red_night</item>
        <item name="colorPrimaryVariant">@color/mario_dark_red_night</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mario_blue_night</item>
        <item name="colorSecondaryVariant">@color/mario_light_blue_night</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- SplashScreen configuration-->
        <item name="postSplashScreenTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/logo_app</item>
        <item name="android:windowSplashScreenAnimationDuration">2500</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/white</item>
        <item name="android:windowSplashScreenBackground">@color/mario_gold
        </item> <!-- Fondo dorado para monedas -->
    </style>
</resources>