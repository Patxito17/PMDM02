<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:contentDescription="@string/character_image"
        android:src="@drawable/mario" />

    <TextView
        android:id="@+id/name"
        style="@style/CharacterDetailsFragment.Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mario_name" />

    <TextView
        android:id="@+id/description"
        style="@style/CharacterDetailsFragment.Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mario_description" />

    <TextView
        android:id="@+id/abilities"
        style="@style/CharacterDetailsFragment.Abilities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mario_abilities" />

</LinearLayout>